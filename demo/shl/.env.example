# Medplum Configuration
MEDPLUM_BASE_URL=https://api.medplum.com
MEDPLUM_CLIENT_ID=your_client_id_here
MEDPLUM_CLIENT_SECRET=your_client_secret_here

# SHL Configuration
SHL_BASE_URL=https://your-domain.com/api/shl/manifests

# SHC Signing Keys (for production)
# Generate ES256 key pair for signing Smart Health Cards
SHC_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----
your_es256_private_key_here
-----END PRIVATE KEY-----

SHC_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----
your_es256_public_key_here
-----END PUBLIC KEY-----

# Passcode Security
# Global pepper for additional passcode security
SHL_PASSCODE_PEPPER=your_global_pepper_here
